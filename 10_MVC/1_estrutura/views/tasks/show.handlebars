<ul>
    {{#each tasks}}
        <li class="task">
            <a href="/tasks/{{this.id}}">{{this.title}}</a>
            <div class="task-icons">
                <a href="/"><i class="bi bi-check2"></i></a>
                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" id="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>